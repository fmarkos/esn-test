{#
/**
 * @file
 * Template for the frontpage.
 *
 * Available variables:
 * - site_url: the base url of our page.
 */
#}
{% extends 'base.twig' %}

{% block content %}
  {% if article %}
    <h1 class="mt-3">{{ article.title }}</h1>

    <div class="container">
      <div class="row">
        <div class="col-md-8">
          {# <h3>{{ article.title }}</h3> #}
          <p>{{ article.text }}</p>
          <p>City:{{ article.location }}</p>
          <p>Date:{{ article.date }}</p>
        </div>
        <div class="col-md-4">
          <img src="{{ article.images[0]}}" alt="">
          <img src="{{ article.images[1]}}" alt="">
          <img src="{{ article.images[2]}}" alt="">
        </div>
      </div>
      <div class="row justify-content-end">
        <a class="btn btn-primary" href="{{ site_url }}/articles" role="button">Articles</a>
      </div>
    </div>
  {% else %}
    <div class="tasks_container">
      <div class="tasks_group">
        <div class="task_header">404</div>
        <div class="task">Page not found.</div>

        <div class="row justify-content-end">
          <a class="btn btn-primary" href="{{ site_url }}/articles" role="button">Articles</a>
        </div>

      </div>
    </div>
  {% endif %}
{% endblock %}
